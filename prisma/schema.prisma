generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario {
  id              Int     @id @default(autoincrement())
  nombre          String
  apellido_pat    String
  apellido_mat    String
  usuario         String  @unique
  claveHash       String
  tipo_id         Int
  tipo            TipoUsuario @relation(fields: [tipo_id], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt


  @@map("usuarios")
}

model TipoUsuario {
  id     Int @id @default(autoincrement())
  tipo   String

  usuarios Usuario[]
  @@map("tipos_usuario")
}